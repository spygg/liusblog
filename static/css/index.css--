.social-contact img {
    transition: All 0.1s ease-in-out;
}

.social-contact img:hover {
    transform: scale(1.2);
}

.list-group .list-group-item{
    padding-top: 6px;
    padding-bottom: 6px;
}
.breadcrumb{
    background-color: #fff;
    margin-bottom: 0px;
}

.article-detail-area{
    margin-top: 10px;
}

.artile-detail{
    font-size: 16px;
    line-height: 1.8em;
}
.article-title h1{
    margin-top: 0px;
}
.artile-detail{
    line-height: 1.8em;
    margin-top: 1em;
    margin-bottom: 1em;
}

.article-area-article {
    margin-top: 10px;
}

/*.panel-heading{
    padding-bottom: 5px;
}*/

.show-more{
    text-align: center;
    color: rgb(0, 0, 200);
/*    padding-top: 5px;
    padding-bottom: 5px;*/
}

.modify_article{
    color: rgb(0, 0, 200);
}


.artile-detail h2{
    font-weight: 600;
    margin: 10px 0 10px 0;
    padding: 0 10px;
    border-left: 5px solid #20c997;
    background-color: #f7f7f7;
    line-height: 2em;
}

.artile-detail h3 {
    font-weight: bold;
}

.toc-level1{
    position: fixed;
    list-style: none;

}




.toc-level1 li{
    list-style-type:upper-roman;
    font-size: 1.5em;
    line-height: 1.8em;
}

.toc-level2 li{
   
    list-style-type:decimal;
    font-size: 1em;


}

.reward{
    position: relative;
}
.reward-button{
    margin: 0 auto;
    position: relative;
}


